<%-include("partials/header.ejs")%>

<div class="container flex-row">
  <div class="row">
    <div class=" container col-7 d-flex flex-column my-5 bg-body-tertiary border border-light px-3">
      <%if(locals.blogArr.length>0) { %>
        <%blogArr.forEach(function(blog){ %>
          <div class="p-2 m-2 container border-bottom border-secondary">
            <a href="/blogPage/<%=blogArr.indexOf(blog)%>">
              <div class="row">
                <div class="col-10"><h4><%=blog.title%></h4></div>
                <div class="col"><small class="text-body-secondary"><%=blog.date%></small></div>
              </div>
              <div class="row">
                <div class="col-6 mb-2 small"><small><%=blog.name%></small></div>
              </div>
              <div class="row">
                <div class="col-12 mb-1 small">
                  <p><%=blog.content%></p>
                </div>
              </div>
            </a>
          </div>
       <% }) %>
      <%} else{ %>
          <div class="p-2 m-2 text-center"><p>No recent Posts...</p></div>
      <%}%>

    </div>

    <div class="d-flex col-3 my-5 flex-column align-items-stretch flex-shrink-0 bg-body-tertiary" style="width: 380px;">
      <a href="/" class="d-flex align-items-center flex-shrink-0 p-3 link-body-emphasis text-decoration-none border-bottom">
        <svg class="bi pe-none me-2" width="30" height="24"><use xlink:href="#bootstrap"></use></svg>
        <span class="fs-5 fw-semibold">Recent Travel Stories</span>
      </a>
      <%if(locals.blogArr.length>0){%>
        <%blogArr.forEach(function(blog){ %>
          <div class="list-group list-group-flush border-bottom scrollarea">
            <a href="/blogPage/<%=blogArr.indexOf(blog)%>" class="list-group-item list-group-item-action py-3 lh-sm">
              <div class="d-flex w-100 align-items-center justify-content-between">
                <strong class="mb-1"><%=blog.title%></strong>
                <small class="text-body-secondary"><%=blog.date%></small>
              </div>
            </a>
          </div>
        <%}) %>
     <% } %>
    </div>
  </div>
</div>





<%-include("partials/footer.ejs")%>
    